pipeline {

    agent any
    
    stages {
        stage('Checking deploy tools and initial clean'){
            steps{
                sh 'mvn --version'
                sh 'java -version'
                sh 'git --version'
                sh 'terraform - v'
            }
        }
        stage('install App server'){
            steps{
                echo 'App server installed'
            }
        }
        stage('install Web server'){
            steps{
                echo 'Web server installed'
            }
        }
        stage('complete'){
            steps {
                echo 'Server deployment completed'
            }
        }
    }
}