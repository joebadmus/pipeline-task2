pipeline {
    agent any
    
    stages {
        stage('checking deploy tools and initial clean'){
            steps{
                sh 'mvn --version'
                sh 'java -version'
                sh 'git --version'
                sh 'terraform - v'
            }
        }
        stage('Install App server'){
            steps{
                echo ‘App server installed'
            }
        }
        stage('Install Web server'){
            steps{
                echo ‘Web server installed'
            }
        }
        stage('compile and test code'){
            steps{
                echo 'compile and test code''

            }
        }

        stage('Deploy code to App server'){
            steps {
                echo 'code Deployed'
            }
        }
        
        stage('test code on app server'){
            steps {
                echo 'code tested'
            }
        }
        

        stage('complete'){
            steps {
                echo 'complete'
            }
        }
    }
}